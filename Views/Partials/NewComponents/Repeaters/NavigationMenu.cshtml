@inherits UmbracoViewPage<SimpleWrapperModel>
@*
    Widget:  Simple Wrapper.  Will wrap each item in it's own container.  Used if each item in the Model should be it's own row on the page

*@
@if (Model.ComponentModel != null && Model.ComponentModel.Any())
{
    if (Model.ComponentModel.Count() > 1)
    {
        <div class="col-sm-9 solution-grid">

            @for (int i = 0; i < Model.ComponentModel.Count(); i++)
            {
                <div class="solution solution-col">
                    @{
                        var item = (object)Model.ComponentModel.ElementAt(i);
                        @Html.Partial(Model.ComponentView, item)
                    }
                </div>
            }

        </div>
    }
    else
    {

        <div class="col-sm-3 solution-margin-3">
            <div class="solution col-sm-12">
                @for (int i = 0; i < Model.ComponentModel.Count(); i++)
                {
                    var item = (object)Model.ComponentModel.ElementAt(i);
                    @Html.Partial(Model.ComponentView, item)
                }
            </div>
        </div>
    }

}
